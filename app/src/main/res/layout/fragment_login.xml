<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:fillViewport="true"
    android:background="@color/backgroundColor"
    tools:context=".LoginFragment">

    <ImageButton
        android:id="@+id/btnBack"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:background="@null"
        android:clickable="true"
        android:contentDescription="Go Back"
        android:src="@drawable/ic_arrow_left"
        app:tint="@color/black"
        app:layout_constraintStart_toStartOf="@id/startGuideline"
        app:layout_constraintTop_toBottomOf="@id/topGuideline"
        tools:ignore="TouchTargetSizeCheck" />

    <ImageButton
        android:id="@+id/btnLogo"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@null"
        android:scaleType="fitCenter"
        android:contentDescription="Company Logo"
        android:src="@drawable/img_logo"
        app:layout_constraintWidth_percent="0.3"
        app:layout_constraintDimensionRatio="1.1"
        app:layout_constraintStart_toStartOf="@id/startGuideline"
        app:layout_constraintEnd_toEndOf="@id/endGuideline"
        app:layout_constraintTop_toBottomOf="@id/ContentTopGuideline" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:autoSizeMinTextSize="20sp"
        android:autoSizeMaxTextSize="27sp"
        android:text="Welcome Back!"
        android:textSize="25sp"
        android:textColor="@color/mainColor"
        android:fontFamily="@font/poppins_semibold"
        android:letterSpacing="0.0001"
        app:layout_constraintStart_toStartOf="@id/startGuideline"
        app:layout_constraintEnd_toEndOf="@id/endGuideline"
        app:layout_constraintTop_toBottomOf="@id/str1TopGuideline"/>

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:autoSizeMinTextSize="10sp"
        android:autoSizeMaxTextSize="17sp"
        android:text="Login to manage your appointments."
        android:textSize="15sp"
        android:textColor="@color/subColor"
        android:fontFamily="@font/inter_24pt_regular"
        android:letterSpacing="0.0001"
        app:layout_constraintStart_toStartOf="@id/startGuideline"
        app:layout_constraintEnd_toEndOf="@id/endGuideline"
        app:layout_constraintTop_toBottomOf="@id/str2TopGuideline"/>

    <LinearLayout
        android:id="@+id/layoutEmail"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/drawable_input_layout"
        android:paddingVertical="10dp"
        android:paddingHorizontal="16dp"
        app:layout_constraintEnd_toEndOf="@id/endGuideline"
        app:layout_constraintStart_toStartOf="@id/startGuideline"
        app:layout_constraintTop_toBottomOf="@id/layoutEmailTopGuideline">

        <TextView
            android:id="@+id/labelEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:autoSizeMinTextSize="6sp"
            android:autoSizeMaxTextSize="13sp"
            android:text="Email Address"
            android:textSize="11sp"
            android:textColor="@color/mainColor"
            android:fontFamily="@font/inter_24pt_semibold"
            android:letterSpacing="0.0001"
            android:translationY="15dp"
            android:alpha="0"/>

        <EditText
            android:id="@+id/inputEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:autoSizeMinTextSize="9sp"
            android:autoSizeMaxTextSize="16sp"
            android:hint="Enter email address"
            android:textColorHint="@color/hintColor"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:fontFamily="@font/inter_24pt_regular"
            android:letterSpacing="0.0001"
            android:translationY="-9dp"
            android:singleLine="true"
            android:imeOptions="actionNext"
            android:inputType="textEmailAddress"
            tools:ignore="touchTargetSizeCheck"/>
    </LinearLayout>

    <TextView
        android:id="@+id/tvEmailError"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/errorColor"
        android:textSize="12sp"
        android:fontFamily="@font/inter_24pt_regular"
        android:visibility="gone"
        android:text="Invalid email address"
        app:layout_constraintTop_toBottomOf="@id/layoutEmail"
        app:layout_constraintStart_toStartOf="@id/startGuideline"
        app:layout_constraintEnd_toEndOf="@id/endGuideline"
        android:paddingStart="4dp"
        android:paddingTop="2dp"
        android:paddingBottom="4dp"/>

    <LinearLayout
        android:id="@+id/layoutPassword"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/drawable_input_layout"
        android:layout_marginTop="5dp"
        android:paddingVertical="10dp"
        android:paddingHorizontal="16dp"
        app:layout_constraintEnd_toEndOf="@id/endGuideline"
        app:layout_constraintStart_toStartOf="@id/startGuideline"
        app:layout_constraintTop_toBottomOf="@id/tvEmailError">

        <TextView
            android:id="@+id/labelPass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:autoSizeMinTextSize="6sp"
            android:autoSizeMaxTextSize="13sp"
            android:text="Password"
            android:textSize="11sp"
            android:textColor="@color/mainColor"
            android:fontFamily="@font/inter_24pt_semibold"
            android:letterSpacing="0.0001"
            android:translationY="15dp"
            android:alpha="0" />

        <EditText
            android:id="@+id/inputPass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:autoSizeMinTextSize="9sp"
            android:autoSizeMaxTextSize="16sp"
            android:hint="Enter password"
            android:textColorHint="@color/hintColor"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:fontFamily="@font/inter_24pt_regular"
            android:letterSpacing="0.0001"
            android:translationY="-9dp"
            android:drawableEnd="@drawable/ic_visibility_on"
            android:drawableTint="@color/hintColor"
            android:drawablePadding="8dp"
            android:singleLine="true"
            android:imeOptions="actionDone"
            android:inputType="textPassword"
            tools:ignore="touchTargetSizeCheck"/>
    </LinearLayout>

    <TextView
        android:id="@+id/tvPassError"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/errorColor"
        android:textSize="12sp"
        android:fontFamily="@font/inter_24pt_regular"
        android:visibility="gone"
        android:text="Password must be at least 6 characters"
        app:layout_constraintTop_toBottomOf="@id/layoutPassword"
        app:layout_constraintStart_toStartOf="@id/startGuideline"
        app:layout_constraintEnd_toEndOf="@id/endGuideline"
        android:paddingStart="4dp"
        android:paddingTop="2dp"
        android:paddingBottom="4dp"/>

    <TextView
        android:id="@+id/goToForgotPass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:autoSizeMinTextSize="10sp"
        android:autoSizeMaxTextSize="17sp"
        android:text="forgot password?"
        android:textSize="15sp"
        android:textColor="@color/subColor"
        android:fontFamily="@font/inter_24pt_medium"
        app:layout_constraintEnd_toEndOf="@id/endGuideline"
        app:layout_constraintStart_toStartOf="@id/startGuideline"
        app:layout_constraintTop_toBottomOf="@id/forgotPassTopGuideline"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnLogin"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:autoSizeMinTextSize="9sp"
        android:autoSizeMaxTextSize="16sp"
        android:text="Log in"
        android:textSize="14sp"
        android:textColor="@color/white"
        android:fontFamily="@font/inter_24pt_semibold"
        android:textAllCaps="false"
        android:letterSpacing="0.0001"
        android:background="@drawable/drawable_gradient_background"
        android:backgroundTint="@null"
        android:paddingTop="17dp"
        android:paddingBottom="17dp"
        android:stateListAnimator="@null"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:insetLeft="0dp"
        android:insetRight="0dp"
        app:backgroundTint="@null"
        app:elevation="0dp"
        app:strokeWidth="0dp"
        app:layout_constraintEnd_toEndOf="@id/endGuideline"
        app:layout_constraintStart_toStartOf="@id/startGuideline"
        app:layout_constraintTop_toBottomOf="@id/btnTopGuideline"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnGoToPhone"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:autoSizeMinTextSize="9sp"
        android:autoSizeMaxTextSize="16sp"
        android:text="Continue with Phone Number"
        android:textSize="14sp"
        android:textColor="@color/mainColor"
        android:fontFamily="@font/inter_24pt_medium"
        android:textAllCaps="false"
        android:letterSpacing="0.0001"
        android:background="@drawable/drawable_gradient_border"
        app:backgroundTint="@null"
        app:rippleColor="@color/mainColor"
        android:stateListAnimator="@null"
        android:paddingTop="17dp"
        android:paddingBottom="17dp"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:insetLeft="0dp"
        android:insetRight="0dp"
        app:elevation="0dp"
        app:strokeWidth="1dp"
        app:strokeColor="@color/mainColor"
        app:layout_constraintEnd_toEndOf="@id/endGuideline"
        app:layout_constraintStart_toStartOf="@id/startGuideline"
        app:layout_constraintTop_toBottomOf="@id/btn2TopGuideline"/>

    <TextView
        android:id="@+id/tvEmailSignUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:autoSizeMinTextSize="10sp"
        android:autoSizeMaxTextSize="17sp"
        android:clickable="true"
        android:focusable="true"
        android:text="@string/signup_text"
        android:textSize="15sp"
        android:textColor="@color/black"
        android:fontFamily="@font/inter_24pt_medium"
        android:letterSpacing="0.0001"
        app:layout_constraintEnd_toEndOf="@id/endGuideline"
        app:layout_constraintStart_toStartOf="@id/startGuideline"
        app:layout_constraintTop_toBottomOf="@id/signUpTopGuideline"
        tools:ignore="touchTargetSizeCheck"/>

    <!-- Guidelines -->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/startGuideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.0444" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/endGuideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.9556" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/topGuideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.030" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/ContentTopGuideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.070" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/str1TopGuideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.20" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/str2TopGuideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.247" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/layoutEmailTopGuideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.30" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/layoutPassTopGuideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.372" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/forgotPassTopGuideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.47" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/btnTopGuideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.75" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/btn2TopGuideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.822" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/signUpTopGuideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.916" />

</androidx.constraintlayout.widget.ConstraintLayout>