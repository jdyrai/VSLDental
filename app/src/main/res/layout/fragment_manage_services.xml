<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".CreatePasswordFragment">



    <LinearLayout
        android:id="@+id/YourAppointmentContainerIMG"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingHorizontal="20dp"
        android:paddingVertical="10dp"
        app:layout_constraintEnd_toEndOf="@id/endGuideline"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@id/startGuideline"
        app:layout_constraintTop_toBottomOf="@+id/DetailsContainer"/>


    <LinearLayout
        android:id="@+id/YourAppointmentContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingVertical="10dp"
        app:layout_constraintEnd_toEndOf="@id/endGuideline"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@id/startGuideline"
        app:layout_constraintTop_toBottomOf="@+id/YourAppointmentContainerIMG">

        <TextView
            android:id="@+id/YourAppointmentText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter_24pt_semibold"
            android:gravity="center"
            android:text="Appointment Details"
            android:textColor="@color/mainColor"
            android:textSize="25sp" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/AppointmentContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/curved_uppercorner"
        android:orientation="horizontal"
        android:paddingHorizontal="10dp"
        android:paddingVertical="10dp"
        app:layout_constraintEnd_toEndOf="@id/endGuideline"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@id/startGuideline"
        app:layout_constraintTop_toBottomOf="@+id/YourAppointmentContainer">

        <TextView
            android:id="@+id/ServiceNameText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginBottom="16dp"
            android:fontFamily="@font/inter_24pt_semibold"
            android:text="Service Name"
            android:textColor="@color/black"
            android:textSize="16sp" />
        <TextView
            android:id="@+id/StatusAvailabilityText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:layout_marginBottom="16dp"
            android:fontFamily="@font/inter_24pt_semibold"
            android:text="Status"
            android:textColor="@color/black"
            android:textSize="16sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/AppointmentContainer2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/progress_shape"
        android:orientation="horizontal"
        android:paddingHorizontal="16dp"
        android:paddingVertical="10dp"
        app:layout_constraintEnd_toEndOf="@id/endGuideline"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@id/startGuideline"
        app:layout_constraintTop_toBottomOf="@+id/AppointmentContainer">


        <LinearLayout
            android:id="@+id/ConsulationContainer"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight=".5"
            android:orientation="vertical"
            android:paddingHorizontal="7dp"
            app:layout_constraintEnd_toEndOf="@id/endGuideline"
            app:layout_constraintStart_toStartOf="@id/startGuideline"
            app:layout_constraintTop_toBottomOf="@id/layoutPass1TopGuideline">

            <TextView
                android:id="@+id/ConsultationText"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:fontFamily="@font/inter_24pt_semibold"
                android:text="Consultation"
                android:textColor="@color/black"
                android:textSize="13sp" />
            <TextView
                android:id="@+id/CleaningText"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:fontFamily="@font/inter_24pt_semibold"
                android:text="Cleaning"
                android:textColor="@color/black"
                android:textSize="13sp" />
            <TextView
                android:id="@+id/ToothExtractionText"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:fontFamily="@font/inter_24pt_semibold"
                android:text="Tooth Extraction"
                android:textColor="@color/black"
                android:textSize="13sp" />
            <TextView

                android:id="@+id/DentalFillingText"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:fontFamily="@font/inter_24pt_semibold"
                android:text="Dental Filling"
                android:textColor="@color/black"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/DentalBraces"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:fontFamily="@font/inter_24pt_semibold"
                android:text="Dental Braces"
                android:textColor="@color/black"
                android:textSize="13sp" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/ServiceandTimeContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight=".2"
            android:orientation="vertical"

            app:layout_constraintEnd_toEndOf="@id/endGuideline"
            app:layout_constraintStart_toStartOf="@id/startGuideline"
            app:layout_constraintTop_toBottomOf="@id/layoutPass1TopGuideline">



            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/ConsultationSwitch"
                android:layout_width="wrap_content"
                android:textOff="OFF"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:textOn="ON"
                android:layout_gravity="center"
                app:useMaterialThemeColors="true" />

            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/CleaningSwitch"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:textOff="OFF"
                android:textOn="ON"
                android:layout_gravity="center"
                app:useMaterialThemeColors="true" />

            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/TootheExtractionSwitch"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:textOff="OFF"
                android:textOn="ON"
                android:layout_gravity="center"
                app:useMaterialThemeColors="true" />

            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/DentalFillingSwitch"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:textOff="OFF"
                android:textOn="ON"
                android:layout_gravity="center"
                app:useMaterialThemeColors="true" />
            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/DentalBracesSwitch"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:textOff="OFF"
                android:textOn="ON"
                android:layout_gravity="center"
                app:useMaterialThemeColors="true" />
        </LinearLayout>



        <LinearLayout
            android:id="@+id/DateContainer"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.2"
            android:orientation="vertical"
            android:paddingHorizontal="10dp"
            app:layout_constraintEnd_toEndOf="@id/endGuideline"
            app:layout_constraintStart_toStartOf="@id/startGuideline"
            app:layout_constraintTop_toBottomOf="@id/layoutPass1TopGuideline">

            <TextView
                android:id="@+id/ConsultationStatus"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"

                android:fontFamily="@font/inter_24pt_semibold"
                android:text="Not Available"
                android:textColor="@color/black"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/CleaningStatus"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:fontFamily="@font/inter_24pt_semibold"
                android:text="Available"
                android:textColor="@color/black"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/ToothExtractionStatus"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:fontFamily="@font/inter_24pt_semibold"
                android:text="Not Available"
                android:textColor="@color/black"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/DentalFillingStatus"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:fontFamily="@font/inter_24pt_semibold"
                android:text="Available"
                android:textColor="@color/black"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/DentalBracesStatus"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:fontFamily="@font/inter_24pt_semibold"
                android:text="Not Available"
                android:textColor="@color/black"
                android:textSize="13sp" />

        </LinearLayout>





    </LinearLayout>


    <LinearLayout
        android:id="@+id/NoteContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/curved_lowercorner"
        android:orientation="horizontal"
        android:paddingHorizontal="10dp"
        android:paddingVertical="10dp"
        app:layout_constraintEnd_toEndOf="@id/endGuideline"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@id/startGuideline"
        app:layout_constraintTop_toBottomOf="@+id/AppointmentContainer2">

        <TextView
            android:id="@+id/NoteText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:fontFamily="@font/inter_24pt_semibold"
            android:text="Time Availability"
            android:textColor="@color/black"
            android:textSize="16sp" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/CancelAppointmentLL"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/input_layout"
        android:backgroundTint="@color/mainColor"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingVertical="20sp"
        app:layout_constraintEnd_toEndOf="@id/endGuideline"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@id/startGuideline"
        app:layout_constraintTop_toTopOf="@+id/btnTopGuideline">

        <TextView
            android:id="@+id/CancelAppointmentText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter_24pt_semibold"
            android:text="Cancel Appointment "
            android:textColor="@color/mainColor"
            android:textSize="14sp" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/ConfirmAppointmentLL"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="138dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/gradient_background"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingHorizontal="10dp"
        android:paddingVertical="20sp"
        app:layout_constraintBottom_toTopOf="@+id/CancelAppointmentLL"
        app:layout_constraintEnd_toEndOf="@id/endGuideline"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@id/startGuideline"
        app:layout_constraintTop_toTopOf="@+id/NoteContainer"
        app:layout_constraintVertical_bias="0.767">

        <TextView
            android:id="@+id/ConfirmAppointmentText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter_24pt_semibold"
            android:text="Confirm Appointment "
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="14sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="@id/endGuideline"
        app:layout_constraintStart_toStartOf="@id/startGuideline"
        app:layout_constraintTop_toBottomOf="@id/progressTopGuideline" />

    <ImageButton
        android:id="@+id/btnBack"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:background="@null"
        android:clickable="true"
        android:contentDescription="go back"
        android:src="@drawable/ic_arrow_left"
        app:layout_constraintStart_toStartOf="@id/startGuideline"
        app:layout_constraintTop_toBottomOf="@id/topGuideline"
        tools:ignore="TouchTargetSizeCheck" />

    <LinearLayout
        android:id="@+id/DetailsContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingHorizontal="0dp"
        android:gravity="center"
        android:paddingVertical="0dp"
        app:layout_constraintEnd_toEndOf="@id/endGuideline"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@id/startGuideline"
        app:layout_constraintTop_toTopOf="@+id/linearLayout">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter_24pt_semibold"
            android:text="DetailsText"
            android:textColor="@color/black"
            android:textSize="13sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@id/startGuideline"
            app:layout_constraintTop_toTopOf="@+id/linearLayout" />
    </LinearLayout>


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/startGuideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.0444" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/endGuideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.9556" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/progressTopGuideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.075" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/topGuideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.070" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/str1TopGuideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.13" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/str2TopGuideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.173" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/layoutPass1TopGuideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.26" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/layoutPass2TopGuideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.337" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/btnTopGuideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.8" />

</androidx.constraintlayout.widget.ConstraintLayout>