<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:fillViewport="true"
    android:background="@color/backgroundColor"
    tools:context=".UserDashboardFragment">

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/bottomNavBar">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/scrollableContentLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingVertical="1.5dp"
        android:paddingHorizontal="1.5dp"
        app:layout_constraintStart_toStartOf="@id/startGuideline"
        app:layout_constraintTop_toBottomOf="@id/topGuideline">

        <androidx.cardview.widget.CardView
            android:layout_width="45dp"
            android:layout_height="45dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="0dp"
            android:layout_gravity="center"
            android:clipToOutline="true">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/jin"
                android:scaleType="centerCrop" />
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="9dp"
            android:paddingVertical="2dp">

            <TextView
                android:id="@+id/userName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:autoSizeMinTextSize="11sp"
                android:autoSizeMaxTextSize="18sp"
                android:text="Jin Kazama"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:fontFamily="@font/inter_24pt_medium"
                android:letterSpacing="0.0001"/>

            <TextView
                android:id="@+id/memberSince"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:autoSizeMinTextSize="6sp"
                android:autoSizeMaxTextSize="13sp"
                android:text="Member Since 2025"
                android:textSize="11sp"
                android:textColor="@color/subColor"
                android:fontFamily="@font/inter_24pt_regular"
                android:letterSpacing="0.0001"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingVertical="1.5dp"
        android:paddingHorizontal="2.2dp"
        android:layout_marginEnd="5dp"
        android:layout_marginTop="6dp"
        android:background="@drawable/drawable_card_border"
        app:layout_constraintEnd_toEndOf="@id/endGuideline"
        app:layout_constraintTop_toBottomOf="@id/topGuideline">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:padding="5dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_notif_on"
                app:tint="@color/black"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/consultationbg"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp"
        android:paddingVertical="10dp"
        android:paddingHorizontal="10dp"
        android:background="@drawable/drawable_gradient_background_v2"
        app:layout_constraintStart_toStartOf="@id/startGuideline"
        app:layout_constraintEnd_toEndOf="@id/endGuideline"
        app:layout_constraintTop_toBottomOf="@id/AppointmentTopGuideline">

        <TextView
            android:id="@+id/upcomingappointmenttext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:autoSizeMinTextSize="6sp"
            android:autoSizeMaxTextSize="13sp"
            android:text="Upcoming Appointment:"
            android:textSize="11sp"
            android:textColor="@color/white"
            android:fontFamily="@font/inter_24pt_regular"
            android:letterSpacing="0.0001"/>

        <TextView
            android:id="@+id/consultationtext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:autoSizeMinTextSize="20sp"
            android:autoSizeMaxTextSize="27sp"
            android:text="Consultation"
            android:textSize="25sp"
            android:textColor="@color/white"
            android:fontFamily="@font/poppins_semibold"
            android:letterSpacing="0.0001"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingHorizontal="0dp">

            <TextView
                android:id="@+id/datetext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:autoSizeMinTextSize="7sp"
                android:autoSizeMaxTextSize="14sp"
                android:text="MON December 25 - "
                android:textSize="12sp"
                android:textColor="@color/white"
                android:fontFamily="@font/inter_24pt_medium"
                android:letterSpacing="0.0001"/>

            <TextView
                android:id="@+id/timetext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:autoSizeMinTextSize="7sp"
                android:autoSizeMaxTextSize="14sp"
                android:text="08:30 AM - 09:00 AM"
                android:textSize="12sp"
                android:textColor="@color/white"
                android:fontFamily="@font/inter_24pt_medium"
                android:letterSpacing="0.0001"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="@id/startGuideline"
        app:layout_constraintTop_toBottomOf="@id/ServicesLabelTopGuideline">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Services"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:fontFamily="@font/poppins_semibold"
            android:letterSpacing="0.0001"
            app:layout_constraintStart_toStartOf="@id/startGuideline"
            app:layout_constraintTop_toBottomOf="@id/ServicesLabelTopGuideline"/>
    </LinearLayout>

    <com.google.android.flexbox.FlexboxLayout
        android:id="@+id/flexServices"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:flexWrap="wrap"
        app:justifyContent="center"
        app:alignItems="center"
        android:padding="4dp"
        android:clipToPadding="false"
        android:layout_gravity="center"
        app:layout_constraintStart_toStartOf="@id/startGuideline"
        app:layout_constraintEnd_toEndOf="@id/endGuideline"
        app:layout_constraintTop_toBottomOf="@id/ServicesListTopGuideline">

        <!-- SERVICE 1 -->
        <LinearLayout
            android:id="@+id/ConsultContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp"
            android:gravity="center">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:elevation="6dp"
                app:cardBackgroundColor="@color/backgroundColor"
                app:backgroundTintMode="src_over"
                app:cardCornerRadius="12dp"
                app:strokeWidth="0.6dp"
                app:strokeColor="@color/serviceColor1">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:src="@drawable/img_aboutus_consultation"
                    android:background="@android:color/transparent"
                    app:rippleColor="@color/mainColor"
                    android:stateListAnimator="@null"
                    android:contentDescription="Consultation" />
            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Consult"
                android:textSize="12sp"
                android:textColor="@color/serviceColor1"
                android:gravity="center"
                android:fontFamily="@font/inter_24pt_semibold" />
        </LinearLayout>

        <!-- SERVICE 2 -->
        <LinearLayout
            android:id="@+id/ExtractContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp"
            android:gravity="center">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:elevation="6dp"
                app:cardBackgroundColor="@color/backgroundColor"
                app:cardCornerRadius="12dp"
                app:strokeWidth="0.6dp"
                app:strokeColor="@color/serviceColor2">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="16dp"
                    android:src="@drawable/img_db_extraction"
                    android:background="@null"
                    android:contentDescription="Extraction" />
            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Extract"
                android:textSize="12sp"
                android:textColor="@color/serviceColor2"
                android:gravity="center"
                android:fontFamily="@font/inter_24pt_semibold" />
        </LinearLayout>

        <!-- SERVICE 3 -->
        <LinearLayout
            android:id="@+id/CleaningContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp"
            android:gravity="center">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:elevation="6dp"
                app:cardBackgroundColor="@color/backgroundColor"
                app:cardCornerRadius="12dp"
                app:strokeWidth="0.6dp"
                app:strokeColor="@color/serviceColor3">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="14dp"
                    android:src="@drawable/img_db_cleaning"
                    android:background="@null"
                    android:contentDescription="Cleaning" />
            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Cleaning"
                android:textSize="12sp"
                android:textColor="@color/serviceColor3"
                android:gravity="center"
                android:fontFamily="@font/inter_24pt_semibold" />
        </LinearLayout>

        <!-- SERVICE 4 -->
        <LinearLayout
            android:id="@+id/FillingContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp"
            android:gravity="center">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:elevation="6dp"
                app:cardBackgroundColor="@color/backgroundColor"
                app:cardCornerRadius="12dp"
                app:strokeWidth="0.6dp"
                app:strokeColor="@color/serviceColor4">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="14dp"
                    android:src="@drawable/img_db_filling"
                    android:background="@null"
                    android:contentDescription="Filling" />
            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Filling"
                android:textSize="12sp"
                android:textColor="@color/serviceColor4"
                android:gravity="center"
                android:fontFamily="@font/inter_24pt_semibold" />
        </LinearLayout>

        <!-- SERVICE 5 -->
        <LinearLayout
            android:id="@+id/BracesContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp"
            android:gravity="center">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:elevation="6dp"
                app:cardBackgroundColor="@color/backgroundColor"
                app:cardCornerRadius="12dp"
                app:strokeWidth="0.6dp"
                app:strokeColor="@color/serviceColor5">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="14dp"
                    android:src="@drawable/img_db_braces"
                    android:background="@null"
                    android:contentDescription="Braces" />
            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Braces"
                android:textSize="12sp"
                android:textColor="@color/serviceColor5"
                android:gravity="center"
                android:fontFamily="@font/inter_24pt_semibold" />
        </LinearLayout>
    </com.google.android.flexbox.FlexboxLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="@id/startGuideline"
        app:layout_constraintTop_toBottomOf="@id/HistoryLabelTopGuideline">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Recent Appointments"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:fontFamily="@font/poppins_semibold"
            android:letterSpacing="0.0001"
            app:layout_constraintStart_toStartOf="@id/startGuideline"
            app:layout_constraintTop_toBottomOf="@id/ServicesLabelTopGuideline"/>

        <ImageButton
            android:id="@+id/btnSeeAllHistory"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_gravity="center"
            android:background="@null"
            android:clickable="true"
            android:contentDescription="See all"
            android:src="@drawable/ic_caret_right"
            android:layout_marginBottom="1dp"
            app:tint="@color/black"
            app:layout_constraintStart_toStartOf="@id/startGuideline"
            app:layout_constraintTop_toBottomOf="@id/topGuideline"
            tools:ignore="TouchTargetSizeCheck" />
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerAppointments"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:clipToPadding="false"
        app:layout_constraintStart_toStartOf="@id/startGuideline"
        app:layout_constraintEnd_toEndOf="@id/endGuideline"
        app:layout_constraintTop_toBottomOf="@id/HistoryListTopGuideLine"/>

    <LinearLayout
        android:id="@+id/LabelAbout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:paddingTop="15dp"
        app:layout_constraintStart_toStartOf="@id/startGuideline"
        app:layout_constraintEnd_toEndOf="@id/endGuideline"
        app:layout_constraintTop_toBottomOf="@id/recyclerAppointments">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Our Story"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:fontFamily="@font/poppins_semibold"
            android:letterSpacing="0.0001" />
    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/service_consultation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        app:layout_constraintStart_toStartOf="@id/startGuideline"
        app:layout_constraintEnd_toEndOf="@id/endGuideline"
        app:layout_constraintTop_toBottomOf="@id/LabelAbout"
        app:cardCornerRadius="12dp"
        app:cardElevation="0dp"
        app:strokeColor="#2196F3"
        app:strokeWidth="2dp"
        android:clickable="true"
        android:focusable="true">

        <ImageButton
            android:id="@+id/btnConsultation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:background="@null"
            android:padding="0dp"
            android:src="@drawable/img_consultation"
            android:contentDescription="consultation service"
            tools:ignore="TouchTargetSizeCheck" />
    </androidx.cardview.widget.CardView>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/startGuideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.0444" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/endGuideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.9556" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/topGuideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.056" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/AppointmentTopGuideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.145" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/ServicesLabelTopGuideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.33" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/ServicesListTopGuideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.352" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/HistoryLabelTopGuideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.5" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/HistoryListTopGuideLine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.545" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/AboutUsTopGuideLine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_begin="645dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/AboutCardTopGuideLine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.81" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
    <include
        android:id="@+id/bottomNavBar"
        layout="@layout/navigationbar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>