<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:fitsSystemWindows="true"
    android:fillViewport="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AboutUsFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:src="@drawable/img_aboutus_1"
            android:alpha="0.8"
            android:scaleType="centerCrop"
            app:layout_constraintDimensionRatio="H, 15:12"
            android:adjustViewBounds="true"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/drawable_circle"
            android:backgroundTint="@color/white"
            android:clickable="true"
            android:contentDescription="go back"
            android:src="@drawable/ic_arrow_left"
            android:scaleType="centerInside"
            app:layout_constraintStart_toStartOf="@id/startGuideline"
            app:layout_constraintTop_toBottomOf="@id/topGuideline"
            tools:ignore="TouchTargetSizeCheck" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="@id/endGuideline"
            app:layout_constraintStart_toStartOf="@id/startGuideline"
            app:layout_constraintTop_toBottomOf="@id/progressTopGuideline">

            <LinearLayout
                android:id="@+id/step1"
                android:layout_width="11dp"
                android:layout_height="11dp"
                android:orientation="vertical"
                android:background="@drawable/drawable_progress_shape"
                android:backgroundTint="@color/mainColor"
                android:layout_marginRight="3dp"/>

            <LinearLayout
                android:id="@+id/step2"
                android:layout_width="11dp"
                android:layout_height="11dp"
                android:orientation="vertical"
                android:background="@drawable/drawable_progress_shape"
                android:backgroundTint="@color/gray"
                android:layout_marginRight="3dp"/>

            <LinearLayout
                android:id="@+id/step3"
                android:layout_width="11dp"
                android:layout_height="11dp"
                android:orientation="vertical"
                android:background="@drawable/drawable_progress_shape"
                android:backgroundTint="@color/gray"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp"
            android:elevation="6dp"
            android:translationZ="6dp"
            android:clipToOutline="true"
            android:background="@drawable/drawable_layout_services"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/layoutTopGuideline">

            <TextView
                android:id="@+id/name_service"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="About Us"
                android:textSize="19sp"
                android:textColor="@color/black"
                android:fontFamily="@font/inter_24pt_semibold"
                android:letterSpacing="0.01"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"/>

            <LinearLayout
                android:id="@+id/TabsContainer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                app:layout_constraintStart_toStartOf="@id/startGuideline"
                app:layout_constraintEnd_toEndOf="@id/endGuideline"
                app:layout_constraintTop_toBottomOf="@id/layoutTopGuideline"
                android:layout_marginTop="20dp"
                android:paddingHorizontal="10dp">

                <TextView
                    android:id="@+id/tabAbout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="About Us"
                    android:textColor="@color/mainColor"
                    android:textSize="15sp"
                    android:fontFamily="@font/inter_24pt_semibold"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tabGallery"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="40dp"
                    android:gravity="center"
                    android:text="Gallery"
                    android:textColor="@color/subColor"
                    android:textSize="15sp"
                    android:fontFamily="@font/inter_24pt_semibold"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tabReview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="40dp"
                    android:fontFamily="@font/inter_24pt_semibold"
                    android:gravity="center"
                    android:text="Review"
                    android:textColor="@color/subColor"
                    android:textSize="15sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingVertical="10dp"
                android:paddingEnd="30dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tooth extraction is the removal of a severely decayed, damaged, or impacted tooth. The dentist ensures the procedure is safe and comfortable, often using local anesthesia. After the extraction, youâ€™ll receive aftercare instructions to promote proper healing and prevent infection. This treatment helps relieve pain and maintain oral health."
                    android:textSize="14sp"
                    android:textColor="@color/subColor"
                    android:fontFamily="@font/inter_24pt_regular"
                    android:letterSpacing="0.0001"
                    android:justificationMode="inter_word"/>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingVertical="2dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/inter_24pt_semibold"
                android:letterSpacing="0.0001"
                android:text="Our Services"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <com.google.android.flexbox.FlexboxLayout
                android:id="@+id/flexServices"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:flexWrap="wrap"
                app:justifyContent="center"
                app:alignItems="center"
                android:padding="4dp"
                android:clipToPadding="false"
                android:layout_gravity="center">

                <!-- SERVICE 1 -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="8dp"
                    android:gravity="center">

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:elevation="6dp"
                        app:cardBackgroundColor="@color/serviceColor1"
                        app:backgroundTintMode="src_over"
                        app:cardCornerRadius="12dp"
                        app:strokeWidth="0dp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="14dp"
                            android:src="@drawable/img_aboutus_consultation"
                            android:background="@null"
                            app:rippleColor="@color/mainColor"
                            android:stateListAnimator="@null"
                            android:contentDescription="Consultation" />
                    </com.google.android.material.card.MaterialCardView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="Consult"
                        android:textSize="12sp"
                        android:textColor="@color/black"
                        android:gravity="center"
                        android:fontFamily="@font/inter_24pt_semibold" />
                </LinearLayout>

                <!-- SERVICE 2 -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="8dp"
                    android:gravity="center">

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:elevation="6dp"
                        app:cardBackgroundColor="@color/serviceColor2"
                        app:cardCornerRadius="12dp"
                        app:strokeWidth="0dp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="14dp"
                            android:src="@drawable/img_db_extraction"
                            android:background="@null"
                            android:contentDescription="Extraction" />
                    </com.google.android.material.card.MaterialCardView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="Extract"
                        android:textSize="12sp"
                        android:textColor="@color/black"
                        android:gravity="center"
                        android:fontFamily="@font/inter_24pt_semibold" />
                </LinearLayout>

                <!-- SERVICE 3 -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="8dp"
                    android:gravity="center">

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:elevation="6dp"
                        app:cardBackgroundColor="@color/serviceColor3"
                        app:cardCornerRadius="12dp"
                        app:strokeWidth="0dp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="14dp"
                            android:src="@drawable/img_db_cleaning"
                            android:background="@null"
                            android:contentDescription="Cleaning" />
                    </com.google.android.material.card.MaterialCardView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="Cleaning"
                        android:textSize="12sp"
                        android:textColor="@color/black"
                        android:gravity="center"
                        android:fontFamily="@font/inter_24pt_semibold" />
                </LinearLayout>

                <!-- SERVICE 4 -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="8dp"
                    android:gravity="center">

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:elevation="6dp"
                        app:cardBackgroundColor="@color/serviceColor4"
                        app:cardCornerRadius="12dp"
                        app:strokeWidth="0dp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="14dp"
                            android:src="@drawable/img_db_filling"
                            android:background="@null"
                            android:contentDescription="Filling" />
                    </com.google.android.material.card.MaterialCardView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="Filling"
                        android:textSize="12sp"
                        android:textColor="@color/black"
                        android:gravity="center"
                        android:fontFamily="@font/inter_24pt_semibold" />
                </LinearLayout>

                <!-- SERVICE 5 -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="8dp"
                    android:gravity="center">

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:elevation="6dp"
                        app:cardBackgroundColor="@color/serviceColor5"
                        app:cardCornerRadius="12dp"
                        app:strokeWidth="0dp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="14dp"
                            android:src="@drawable/img_db_braces"
                            android:background="@null"
                            android:contentDescription="Braces" />
                    </com.google.android.material.card.MaterialCardView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="Braces"
                        android:textSize="12sp"
                        android:textColor="@color/black"
                        android:gravity="center"
                        android:fontFamily="@font/inter_24pt_semibold" />
                </LinearLayout>
            </com.google.android.flexbox.FlexboxLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Location"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:fontFamily="@font/inter_24pt_semibold"
                android:letterSpacing="0.0001"
                android:paddingVertical="2dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:paddingVertical="10dp"
                android:paddingEnd="30dp"
                android:layout_marginStart="20dp"
                android:background="@drawable/drawable_input_layout">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="1dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="5dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="VSL Dental Clinic"
                        android:textSize="13dp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/inter_24pt_semibold"
                        android:letterSpacing="0.001"
                        android:padding="1dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="#87 Unit F, 2nd Floor \nBunag Building, Burol St., \nMolino 1, Bacoor, Cavite"
                        android:textSize="13dp"
                        android:textColor="@color/subColor"
                        android:fontFamily="@font/inter_24pt_regular"
                        android:letterSpacing="0.001"
                        android:padding="1dp"/>
                </LinearLayout>

                <ImageView
                    android:id="@+id/imgLogo"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:contentDescription="welcome image"
                    android:src="@drawable/img_welcome"
                    android:layout_marginStart="16dp"
                    android:scaleType="centerCrop" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Contact Information"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:fontFamily="@font/inter_24pt_semibold"
                android:letterSpacing="0.0001"
                android:paddingVertical="2dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingVertical="2dp"
                android:paddingHorizontal="3dp"
                android:layout_marginStart="20dp">

                <ImageView
                    android:id="@+id/btnPhone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:contentDescription="go back"
                    android:src="@drawable/ic_phone"
                    app:tint="@color/subColor"
                    android:scaleType="centerInside"
                    app:layout_constraintStart_toStartOf="@id/startGuideline"
                    app:layout_constraintTop_toBottomOf="@id/topGuideline"
                    tools:ignore="TouchTargetSizeCheck" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+63 917 892 4763"
                    android:textSize="13sp"
                    android:textColor="@color/subColor"
                    android:fontFamily="@font/inter_24pt_regular"
                    android:letterSpacing="0.0001"
                    android:layout_marginStart="5dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingVertical="2dp"
                android:paddingHorizontal="3dp"
                android:layout_marginStart="20dp">

                <ImageView
                    android:id="@+id/btnSocial"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:contentDescription="go back"
                    android:src="@drawable/ic_facebook"
                    app:tint="@color/subColor"
                    android:scaleType="centerInside"
                    app:layout_constraintStart_toStartOf="@id/startGuideline"
                    app:layout_constraintTop_toBottomOf="@id/topGuideline"
                    tools:ignore="TouchTargetSizeCheck" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="https://web.facebook.com/Vsldentalclinic"
                    android:textSize="13sp"
                    android:textColor="@color/subColor"
                    android:fontFamily="@font/inter_24pt_regular"
                    android:letterSpacing="0.0001"
                    android:layout_marginStart="5dp"/>
            </LinearLayout>

        </LinearLayout>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/startGuideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.0444" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/endGuideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.9556" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/topGuideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.020" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/progressTopGuideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.26" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/layoutTopGuideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.286" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>