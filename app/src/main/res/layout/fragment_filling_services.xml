<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor"
    tools:context=".ConsultationServicesFragment">

    <ImageButton
        android:id="@+id/btnBack"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:background="@null"
        android:clickable="true"
        android:contentDescription="go back"
        android:src="@drawable/ic_arrow_left"
        app:layout_constraintStart_toStartOf="@id/startGuideline"
        app:layout_constraintTop_toBottomOf="@id/topGuideline"
        tools:ignore="TouchTargetSizeCheck" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Services"
        android:textSize="13sp"
        android:textColor="@color/black"
        android:fontFamily="@font/inter_24pt_semibold"
        android:letterSpacing="0.01"
        app:layout_constraintStart_toStartOf="@id/startGuideline"
        app:layout_constraintEnd_toEndOf="@id/endGuideline"
        app:layout_constraintTop_toBottomOf="@id/topGuideline" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/startGuideline"
        app:layout_constraintTop_toBottomOf="@id/mainTopGuideline">

        <ImageView
            android:id="@+id/img_services"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:src="@drawable/img_services_filling"
            android:scaleType="fitCenter"
            app:layout_constraintDimensionRatio="H, 13:9"
            app:layout_constraintWidth_percent="0.8"
            app:layout_constraintStart_toStartOf="@id/imgStartGuideline"
            app:layout_constraintEnd_toEndOf="@id/imgEndGuideline"
            app:layout_constraintTop_toBottomOf="@id/imgTopGuideline"
            app:layout_constraintBottom_toTopOf="@id/imgBottomGuideline"/>

        <LinearLayout
            android:id="@+id/bottomLayout"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:padding="10dp"
            android:elevation="6dp"
            android:translationZ="6dp"
            android:clipToOutline="true"
            android:background="@drawable/drawable_layout_services"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/layoutTopGuideline"
            app:layout_constraintBottom_toBottomOf="parent"> <!-- changed to stretch to parent bottom -->

            <TextView
                android:id="@+id/name_service"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                    android:text="Dental Filling"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:fontFamily="@font/inter_24pt_semibold"
                android:letterSpacing="0.01"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="3"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp">

                <!-- Duration -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:paddingHorizontal="3dp">

                    <ImageView
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:src="@drawable/ic_duration"
                        app:tint="@color/mainColor"
                        android:background="@null"/>

                    <TextView
                        android:id="@+id/label_duration"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="30 mins"
                        android:textSize="12sp"
                        android:textColor="@color/subColor"
                        android:fontFamily="@font/inter_24pt_regular"
                        android:layout_gravity="center"
                        android:layout_marginStart="5dp"/>
                </LinearLayout>

                <!-- Cost -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:paddingHorizontal="3dp">

                    <ImageView
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:src="@drawable/ic_cost"
                        app:tint="@color/mainColor"
                        android:background="@null"/>

                    <TextView
                        android:id="@+id/label_cost"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Php 1500"
                        android:textSize="12sp"
                        android:textColor="@color/subColor"
                        android:fontFamily="@font/inter_24pt_regular"
                        android:layout_gravity="center"
                        android:layout_marginStart="5dp"/>
                </LinearLayout>

                <!-- Availability -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:paddingHorizontal="3dp">

                    <ImageView
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:src="@drawable/ic_duration"
                        app:tint="@color/mainColor"
                        android:background="@null"/>

                    <TextView
                        android:id="@+id/label_Available"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Available"
                        android:textSize="12sp"
                        android:textColor="@color/subColor"
                        android:fontFamily="@font/inter_24pt_regular"
                        android:layout_gravity="center"
                        android:layout_marginStart="5dp"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingVertical="10dp"
                android:paddingEnd="30dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Description"
                    android:textSize="15sp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/inter_24pt_semibold"
                    android:letterSpacing="0.01"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="A dental filling restores teeth damaged by decay or cracks. The dentist removes the decayed portion and fills it with durable materials like composite resin or amalgam to restore the toothâ€™s natural function and appearance. Fillings prevent further decay and strengthen the affected tooth."
                    android:textSize="14sp"
                    android:textColor="@color/subColor"
                    android:fontFamily="@font/inter_24pt_regular"
                    android:letterSpacing="0.01"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"/> <!-- This will push the button to the bottom -->

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnLogin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Book an Appointment"
                android:textSize="14sp"
                android:textColor="@color/white"
                android:fontFamily="@font/inter_24pt_semibold"
                android:textAllCaps="false"
                android:letterSpacing="0.01"
                android:background="@drawable/drawable_gradient_background"
                android:backgroundTint="@null"
                android:paddingTop="17dp"
                android:paddingBottom="17dp"
                android:stateListAnimator="@null"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:insetLeft="0dp"
                android:insetRight="0dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="20dp"
                app:backgroundTint="@null"
                app:elevation="0dp"
                app:strokeWidth="0dp" />
        </LinearLayout>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/imgStartGuideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.18" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/imgEndGuideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.82" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/imgTopGuideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.18" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/imgBottomGuideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.27" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/layoutTopGuideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.298" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/btnTopGuideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.9" />
    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/startGuideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.0444" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/endGuideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.9556" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/topGuideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.070" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/mainTopGuideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="-0" />

</androidx.constraintlayout.widget.ConstraintLayout>
