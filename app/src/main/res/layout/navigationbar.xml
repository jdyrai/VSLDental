<?xml version="1.0" encoding="utf-8"?>
<!-- This layout only contains the navigation content. -->
<!-- Its positioning (fixed to bottom) will be defined by the parent layout using <include>. -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/NavigationContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:gravity="center"
    android:orientation="horizontal"
    android:paddingHorizontal="16dp"
    android:paddingVertical="10.2dp"
    android:elevation="8dp"> <!-- Added elevation for a nice visual separation -->

    <!-- Home Button -->
    <LinearLayout
        android:id="@+id/HomeContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center"
        android:orientation="vertical"
        android:background="?attr/selectableItemBackgroundBorderless">

        <ImageView
            android:id="@+id/HomeIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_home"
            app:tint="@color/subColor" />

        <TextView
            android:id="@+id/HomeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter_24pt_medium"
            android:text="Home"
            android:textColor="@color/black"
            android:textSize="9sp"
            android:letterSpacing="0.01"
            android:textAlignment="center"
            android:layout_marginTop="4dp" />
    </LinearLayout>

    <!-- Appoint Button -->
    <LinearLayout
        android:id="@+id/AppointContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center"
        android:orientation="vertical"
        android:background="?attr/selectableItemBackgroundBorderless">

        <ImageView
            android:id="@+id/AppointIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_appoint"
            app:tint="@color/subColor" />

        <TextView
            android:id="@+id/AppointText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter_24pt_medium"
            android:text="Appoint"
            android:textColor="@color/black"
            android:textSize="9sp"
            android:layout_marginTop="4dp" />

    </LinearLayout>

    <!-- Records Button -->
    <LinearLayout
        android:id="@+id/RecordsContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center"
        android:orientation="vertical"
        android:background="?attr/selectableItemBackgroundBorderless">

        <ImageView
            android:id="@+id/RecordsIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_records"
            app:tint="@color/subColor" />

        <TextView
            android:id="@+id/RecordsText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter_24pt_medium"
            android:text="Records"
            android:textColor="@color/black"
            android:textSize="9sp"
            android:layout_marginTop="4dp" />

    </LinearLayout>

    <!-- Profile Button (Menu) -->
    <LinearLayout
        android:id="@+id/ProfileContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center"
        android:orientation="vertical"
        android:background="?attr/selectableItemBackgroundBorderless">

        <ImageView
            android:id="@+id/ProfileIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_menu"
            app:tint="@color/subColor" />

        <TextView
            android:id="@+id/ProfileText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter_24pt_medium"
            android:text="Menu"
            android:textColor="@color/black"
            android:textSize="9sp"
            android:layout_marginTop="4dp" />

    </LinearLayout>
</LinearLayout>